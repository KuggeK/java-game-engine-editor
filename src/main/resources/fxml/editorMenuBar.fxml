<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.kuggek.editor.controllers.EditorMenuBar">
  <menus>
    <Menu fx:id="projectMenu" mnemonicParsing="false" text="Project">
      <items>
        <MenuItem fx:id="newProjectMI" mnemonicParsing="false" text="New project..." />
         <MenuItem fx:id="openProjectMI" mnemonicParsing="false" text="Open project..." />
         <MenuItem fx:id="projectSettingsMI" mnemonicParsing="false" text="Project settings..." />
            <Menu fx:id="scriptsMenu" mnemonicParsing="false" text="Scripts">
               <items>
                  <MenuItem fx:id="compileScriptsMI" mnemonicParsing="false" text="Compile scripts" />
               </items>
            </Menu>
      </items>
    </Menu>
      <Menu fx:id="sceneMenu" mnemonicParsing="false" text="Scene">
         <items>
         <MenuItem fx:id="saveSceneMI" mnemonicParsing="false" text="Save scene" />
         <Menu fx:id="changeSceneMI" mnemonicParsing="false" text="Change scene" />
         </items>
      </Menu>
  </menus>
</MenuBar>
